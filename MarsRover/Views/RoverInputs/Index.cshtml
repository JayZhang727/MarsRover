@model MarsRover.Models.RoverInputsModel

@{
    ViewData["Title"] = "Rover Control";
}

<div class="text-center">
    <h1 class="display-4">Rover Control</h1>
    <p>Below you can enter inputs for the MarsRovers.</p>
</div>

<div class="border container" style="padding:30px;">
    <form method="post" asp-action="Execute">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="MaxX"></label>
            </div>
            <div class="col-6">
                <input asp-for="MaxX" class="form-control" />
            </div>
            <span asp-validation-for="MaxX" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="MaxY"></label>
            </div>
            <div class="col-6">
                <input asp-for="MaxY" class="form-control" />
            </div>
            <span asp-validation-for="MaxY" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="RoverInputs"></label>
            </div>
            <div class="col-6">
                <textarea asp-for="RoverInputs" rows="6" class="form-control"></textarea>
            </div>
            <span asp-validation-for="RoverInputs" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" id="submit" value="Execute" class="btn btn-primary form-control" />
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
